<odoo>
    <data>
        <record id="project_jobseeker_tree_view" model="ir.ui.view">
            <field name="name">project.project.tree</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="string">Jobseeker</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="personal_number"/>
                    <field name="case_number"/>
                    <field name="service"/>
                    <field name="date_start"/>
                    <field name="date"/>
                    <field name="project_next_task"/>
                    <field name="project_next_task_due_date"/>
                    <field name="task_new_event"/>
                </xpath>
            </field>
        </record>

        <record id="project_jobseeker_search_view" model="ir.ui.view">
            <field name="name">project.project.search</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project_project_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='Partner']" position="attributes">
                    <attribute name="string">Jobseeker</attribute>
                </xpath>
                <xpath expr="//filter[@name='Partner']" position="after">
                    <filter string="Start Date" name="Start" context="{'group_by': 'date_start'}"/>
                    <filter string="Expiration Date" name="Expiration" context="{'group_by': 'date'}"/>
                    <filter string="Next Task Due Date" name="Next Task Due Date"
                            context="{'group_by': 'project_next_task_due_date'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
