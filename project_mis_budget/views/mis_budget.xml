<odoo>
  <data>

    <record model="ir.actions.act_window" id="task_act_window">
      <field name="name">Task Budget</field>
      <field name="res_model">project.task</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[('budget_id', '=', active_id)]</field>
      <field name="context">{'default_budget_id': active_id}</field>
    </record>
    <record model="ir.ui.view" id="mis_budget_by_account_form_view">
      <field name="name">mis.budget.form.project</field>
      <field name="model">mis.budget.by.account</field>
      <field name="inherit_id" ref="mis_builder_budget.mis_budget_by_account_form_view" />
      <field name="arch" type="xml">
             <div name="button_box" position="inside">
             <button name="%(task_act_window)d" type="action" class="oe_stat_button" icon="fa-bars" string="Tasks" />
             </div>
             <field name="company_id" position="after">
          <field name="project_id" />
        </field>
             
      </field>
    </record>
    <record model="ir.ui.view" id="mis_budget_by_account_item_form_view">
      <field name="name">mis.budget.by.account.item.form (in mis_builder_budget)</field>
      <field name="model">mis.budget.by.account.item</field>
      <field name="inherit_id" ref="mis_budget_extended.mis_budget_by_account_item_form_view" />
      <field name="arch" type="xml">
        <field name="account_id" position="after">
          <field name="task_id" />
        </field>
      </field>
    </record>
  </data>
</odoo>
