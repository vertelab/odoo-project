<odoo>
    <data>
        <record id="project_project_form_view" model="ir.ui.view">
            <field name="name">project.project.form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" name="action_view_meeting" type="object" icon="fa-calendar" groups="project.group_project_manager">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="meeting_count" nolabel="1"/>
                            </span>
                            <span class="o_stat_text">
                                Meetings
                            </span>
                        </div>
                    </button>
                    <button class="oe_stat_button" name="action_view_channel" type="object" icon="fa-comment" groups="project.group_project_manager">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">
                                Discussions
                            </span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>