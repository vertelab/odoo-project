<odoo>
    <data>
        <record id="project_project_form_view" model="ir.ui.view">
            <field name="name">project.project.form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" name="action_view_meeting" type="object" icon="fa-calendar" groups="project.group_project_manager">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="meeting_count" nolabel="1"/>
                            </span>
                            <span class="o_stat_text">
                                Meetings
                            </span>
                        </div>
                    </button>
                    <button class="oe_stat_button" name="action_view_channel" type="object" icon="fa-comment" groups="project.group_project_manager">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">
                                Discussions
                            </span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_project_kanban">
            <field name="name">project.project.kanban</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project_kanban"/>
            <field name="arch" type="xml">
                <field name="task_count" position="after">
                    <field name="meeting_count"/>
                </field>
                <xpath expr="//div[hasclass('o_kanban_record_bottom')]/div[hasclass('oe_kanban_bottom_left')]//a[last()]" position="after">
                    <a class="o_project_kanban_box" name="action_view_meeting" type="object">
                        <div>
                            <span class="o_value"><t t-esc="record.meeting_count.value"/></span>
                            <span class="o_label ms-1">Meetings</span>
                        </div>
                    </a>
                    <a class="o_project_kanban_box" name="action_view_channel" type="object">
                        <div>
                            <span class="o_label ms-1">Chats</span>
                        </div>
                    </a>
                </xpath>
            </field>
        </record>
    </data>
</odoo>