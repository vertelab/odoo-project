<odoo>
    <data>
        <record model="ir.ui.view" id="view_task_form2">
            <field name="name">project.task.date_start</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project_timeline.view_task_form2"/>
            <field name="arch" type="xml">
                <field name="date_end" position="before">
                    <field name="date_start"/>
                    <field name="date_end2"/>
                </field>
                <field name="date_end" position="replace"/>
            </field>
        </record>

        <record id="project_task_timeline" model="ir.ui.view">
            <field name="name">project.task_date_start</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project_timeline.project_task_timeline"/>
            <field name="type">timeline</field>
            <field name="arch" type="xml">
                <timeline position="attributes">
                    <attribute name="date_start">date_start</attribute>
                    <attribute name="date_stop">date_end2</attribute>
                </timeline>
            </field>
        </record>
    </data>
</odoo>
