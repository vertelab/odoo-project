<odoo>
    <data>
        <record id="project_project_form_view_extend" model="ir.ui.view">
            <field name="name">project.project.form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//page[last()]" position="after">
                    <page string="Versioning">
                        <group>
                            <group>
                                <field name="allow_versioning"/>
                            </group>
                            <group>
                                <field name="versions"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
