<odoo>
    <data>
        <record id="project_versioning_task_form_view" model="ir.ui.view">
            <field name="name">project.versioning.task.form</field>
            <field name="model">project.versioning.task</field>
            <field name="arch" type="xml">
                <form string="Task Versioning">
                    <sheet string="Task Versioning">
                        <div class="oe_title pr-0">
                            <h1 class="d-flex flex-row justify-content-between">
                                <field name="name" class="o_task_name text-truncate" placeholder="Task Versioning Title..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="project_id"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="user_id"/>
                                <field name="create_date"/>
                                <field name="write_date"/>
                                <field name="manager_id"/>
                            </group>
                            <field name="notes"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="project_versioning_task_tree_view" model="ir.ui.view">
            <field name="name">project.versioning.task.tree</field>
            <field name="model">project.versioning.task</field>
            <field name="arch" type="xml">
                <tree string="Task Versioning">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="user_id"/>
                </tree>
            </field>
        </record>


        <record id="open_view_project_task_project" model="ir.actions.act_window">
            <field name="name">Task Versioning</field>
            <field name="res_model">project.versioning.task</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="project_versioning_task_tree_view"/>
        </record>

        <menuitem id="menu_task_versioning" name="Task Versioning" parent="product_versioning.menu_product_versioning"
            sequence="20" action="product_versioning.open_view_project_task_project"/>

    </data>
</odoo>
