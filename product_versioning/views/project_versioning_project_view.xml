<odoo>
    <data>
        <record id="project_versioning_project_form_view" model="ir.ui.view">
            <field name="name">project.versioning.project.form</field>
            <field name="model">project.versioning.project</field>
            <field name="arch" type="xml">
                <form string="Project Versioning">
                    <sheet string="Project Versioning">
                        <div class="oe_title pr-0">
                            <h1 class="d-flex flex-row justify-content-between">
                                <field name="name" class="o_task_name text-truncate" placeholder="Project Title..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="project_id"/>
                                <field name="partner_id"/>
                                <field name="company_id"/>
                                <field name="user_id"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="subtask_project_id"/>
                                <field name="privacy_visibility"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Task Versioning">
                                <field name="task_ids">
                                    <tree editable="top">
                                        <field name="name"/>
                                        <field name="create_date"/>
                                        <field name="write_date"/>
                                        <field name="manager_id"/>
                                        <field name="notes"/>
                                    </tree>
                                </field>

                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>

            </field>
        </record>

        <record id="project_versioning_project_tree_view" model="ir.ui.view">
            <field name="name">project.versioning.project.tree</field>
            <field name="model">project.versioning.project</field>
            <field name="arch" type="xml">
                <tree string="Project Versioning">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="user_id"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>


        <record id="open_view_project_versioning_project" model="ir.actions.act_window">
            <field name="name">Projects Versioning</field>
            <field name="res_model">project.versioning.project</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="project_versioning_project_tree_view"/>
        </record>

        <menuitem id="menu_product_versioning" name="Versioning" parent="project.menu_main_pm"
            sequence="90"/>

        <menuitem id="menu_project_versioning" name="Project Versioning" parent="product_versioning.menu_product_versioning"
            sequence="10" action="product_versioning.open_view_project_versioning_project"/>

    </data>
</odoo>
