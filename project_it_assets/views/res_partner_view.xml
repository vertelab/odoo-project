<odoo>
    <data>
        <record id="res_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="IT Assets">
                        <group>
                            <group>
                                <field name="primary_ethernet_connection"/>
                                <field name="secondary_ethernet_connection"/>
                                <field name="wifi_ethernet_connection"/>
                                <field name="kamera_system"/>
                                <field name="tele_system"/>
                            </group>
                        </group>

                        <field name="it_asset_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="purchase_date"/>
                                <field name="name"/>
                                <field name="create_uid"/>
                                <field name="asset_file" filename="asset_file_filename"/>
                                <field name="asset_file_filename" invisible="1"/>
                                <field name="qty"/>
                                <field name="total"/>
                                <field name="asset_id"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>
