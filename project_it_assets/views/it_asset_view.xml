<odoo>
    <data>
        <record id="it_asset_form" model="ir.ui.view">
            <field name="name">it.asset.form</field>
            <field name="model">it.asset</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="asset_file" filename="asset_file_filename" widget="binary"/>
                                <field name="asset_file_filename" invisible="1"/>
                                <field name="qty"/>
                                <field name="asset_id"/>
                            </group>
                            <group>
                                <field name="purchase_date"/>
                                <field name="create_uid"/>
                                <field name="total"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="it_asset_tree" model="ir.ui.view">
            <field name="name">it.asset.tree</field>
            <field name="model">it.asset</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="create_uid"/>
                    <field name="asset_file" filename="asset_file_filename" widget="binary"/>
                    <field name="asset_file_filename" column_invisible="True"/>
                    <field name="qty"/>
                    <field name="asset_id"/>
                </tree>
            </field>
        </record>

        <record id="it_asset_action" model="ir.actions.act_window">
            <field name="name">IT Assets</field>
            <field name="res_model">it.asset</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="it_asset_reports" name="IT Asset" parent="project.menu_main_pm" sequence="95" action="project_it_assets.it_asset_action"/>
    </data>
</odoo>
