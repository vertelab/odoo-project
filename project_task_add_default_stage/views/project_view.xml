<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project_project_view_form_default" model="ir.ui.view">
        <field name="name">project.project.view.form.default</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.project_project_view_form_simplified" />
        <field name="arch" type="xml">
            <field name="allow_recurring_tasks" position="after">
                <field name="use_default_types"/>
            </field>
        </field>
    </record>

    <record id="edit_project_default" model="ir.ui.view">
        <field name="name">project.project.default.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="use_default_types"/>
            </field>
        </field>
    </record>
</odoo>
