<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.ipf</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="IPF Interpreter Client" string="IPF Interpreter Client" data-key="task_interpreter_ipf_client" groups="base.group_system">
                        <h2>Common settings</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box" title="Add IPF Client Secret">
                                <div class="o_setting_right_pane">
                                    <label for="ipf_client_secret"/>
                                    <div class="text-muted">
                                        IPF Client Secret.
                                    </div>
                                </div>
                                <div class="o_setting_right_pane">
                                    <field name="ipf_client_secret" password="True"/>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box" title="Add IPF Client ID">
                                <div class="o_setting_right_pane">
                                    <label for="ipf_client_id"/>
                                    <div class="text-muted">
                                        IPF Client ID.
                                    </div>
                                </div>
                                <div class="o_setting_right_pane">
                                    <field name="ipf_client_id"/>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box" title="Add IPF Server URL">
                                <div class="o_setting_right_pane">
                                    <label for="ipf_server_url"/>
                                    <div class="text-muted">
                                        IPF Server URL.
                                    </div>
                                </div>
                                <div class="o_setting_right_pane">
                                    <field name="ipf_server_url"/>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box" title="Choose server environment">
                                <div class="o_setting_right_pane">
                                    <label for="ipf_environment"/>
                                    <div class="text-muted">
                                        Server Environment.
                                    </div>
                                </div>
                                <div class="o_setting_right_pane">
                                    <field name="ipf_environment"/>
                                </div>
                            </div>
                        </div>
                        <h2>Update data</h2>
                        <div>
                            <button type="object" name="update_all_data" string="Update all Intepreter data"/>
                            <button type="object" name="update_languages" string="Update Intepreter languages"/>
                            <button type="object" name="update_gender_preference" string="Update Intepreter gender preferences"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
